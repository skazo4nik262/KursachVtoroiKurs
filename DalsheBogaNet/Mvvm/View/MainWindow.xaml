<Window x:Class="DalsheBogaNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DalsheBogaNet"
        xmlns:vm="clr-namespace:DalsheBogaNet.Mvvm.ViewModel"
        mc:Ignorable="d"
        DataContext="{DynamicResource mainVW}"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <vm:BaseVM x:Key="mainVM"/>
    </Window.Resources>
    <Viewbox>
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="100" MaxWidth="250">
            <Label Content="Login"/>
            <TextBox x:Name="tb1" />
            <Label Content="Password"/>
            <TextBox x:Name="tb2"/>
            <Button Content="Войти" Click="Vhod_click" Margin="0 3"/>
        </StackPanel>
    </Viewbox>
</Window>
